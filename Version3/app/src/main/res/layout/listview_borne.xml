<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/activity_listerborne_imageView_niv"
        android:layout_width="30dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        app:srcCompat="@drawable/green_marker" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_weight="33.3">
        <TextView
            android:gravity="center"
            android:text="test2"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/activity_listerborne_textView_nom"/>
        <TextView
            android:gravity="center"
            android:text="test3"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:id="@+id/activity_listerborne_textView_tel"
            android:layout_below="@+id/activity_listerborne_textView_nom"
            />
    </LinearLayout>


</LinearLayout>